<h1>Show Student</h1>

<ul>

  <li>
    <strong>Roll number:</strong>
    <%= @student.roll_number %>
  </li>

  <li>
    <strong>Class:</strong>
    <%= @student.class %>
  </li>

  <li>
    <strong>Name:</strong>
    <%= @student.name %>
  </li>

  <li>
    <strong>Address:</strong>
    <%= @student.address %>
  </li>

</ul>

<span><%= link "Edit", to: Routes.student_path(@conn, :edit, @student) %></span>
<span><%= link "Back", to: Routes.student_path(@conn, :index) %></span>
